{
  "$schema": "https://swc.rs/schema.json",
  // Enable minification
  "minify": true,
  // Optional, configure minification options
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "dynamicImport": false,
    },
    "transform": null,
    "target": "es2020",
    "loose": false,
    "externalHelpers": false,
    // Requires v1.2.50 or upper and requires target to be es2016 or upper.
    "keepClassNames": false,
    "minify": {
      "mangle": true
    }
  }
}
